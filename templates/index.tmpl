<div class="page-header">
	<h1>Kryptohash Blockchain Explorer</h1>
</div>
<div class="row">
	<div class="col-sm-4">
		<div class="panel panel-default">
			<div class="panel-body">
				<form class="form-horizontal" role="form">
				<div class="form-group">
					<label class="col-sm-4 control-label">Block Count</label>
					<div class="col-sm-4">
						<p class="form-control-static"><a href="/blockByHeight/{{.Blocks}}">{{.Blocks}}</a></p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-4 control-label">Difficulty</label>
					<div class="col-sm-4">
						<p class="form-control-static">{{.Difficulty}}</p>
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-4 control-label">Connections</label>
					<div class="col-sm-4">
						<p class="form-control-static">{{.Connections}}</p>
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
	<div></div>
</div>
